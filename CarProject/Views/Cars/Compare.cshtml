            <select id="car2Brands" onchange="changeCarBrands(this.value,'car2Models')">
                <option value="" selected="selected" disabled="disabled">--انتخاب برند--</option>
                @foreach (var item in dbs.CarBrands)
                {
                    <option value="@item.CarBrandId">@item.CarBrandName</option>
                }
            </select>
            <select id="car2Models" name="car2"></select>
        </label>
        <label>
