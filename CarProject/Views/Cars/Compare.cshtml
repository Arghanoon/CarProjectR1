    int car2Id = 0, car3Id = 0;

    CarProject.Areas.Admin.Models.Cars.CarsModel car2 = null, car3 = null;
    
    if (Request.QueryString.AllKeys.Contains("car2"))
    { int.TryParse(Request.QueryString["car2"], out car2Id); }

    if (Request.QueryString.AllKeys.Contains("car3"))
    { int.TryParse(Request.QueryString["car3"], out car3Id); }
    
    if(car2Id > 0)
    {
        car2 = new CarProject.Areas.Admin.Models.Cars.CarsModel(car2Id); 
    }
    
    if (car3Id > 0)
    {
        car3 = new CarProject.Areas.Admin.Models.Cars.CarsModel(car3Id);
    }
}
