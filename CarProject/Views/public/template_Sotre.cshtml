    var dbs = new CarProject.DBSEF.CarAutomationEntities();
    
}

@functions
{
    MvcHtmlString ProductMenuGenerator(int? id)
    {
        string res = "";
        var dbs = new CarProject.DBSEF.CarAutomationEntities();

        var productsGroup = dbs.Categories.Where(c => c.ParentCategoryId == id);
        
        foreach (var item in productsGroup)
        {
            res += string.Format("<section class=\"menuItem\">");
            res += string.Format("<a href=\"{0}\">{1}</a>", "/Store/ProductsList/" + item.CategoryId.ToString(), item.CategoryName);

            var nav = ProductMenuGenerator(item.CategoryId);

            if (nav != null && !string.IsNullOrWhiteSpace(nav.ToString()))
                res += string.Format("<nav>{0}</nav>", nav);
            
            res += string.Format("</section>");
        }

        return new MvcHtmlString(res);
    }
}

