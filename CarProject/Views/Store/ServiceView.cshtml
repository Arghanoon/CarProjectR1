        <style>
            #serviceInfoSection {
                margin: 5px;
                padding: 5px;
            }


            #serviceViewAndPopular {
                display: flex;
                background: white;
                padding: 5px;
            }

                #serviceViewAndPopular a {
                    color: black;
                    margin: 1px 2.5px;
                }

                #serviceViewAndPopular #popularCounter {
                    color: red;
                }


            #tblinfo {
                background: white;
                width: 100%;
            }

                #tblinfo th,
                #tblinfo td {
