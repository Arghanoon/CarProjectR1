@section style
{
    <style>
        #menuContainer {
            display:flex;
            justify-content:center;
            align-items:center;
        }
            #menuContainer a {
                border: thin solid;
                margin:5px;
                width:100px;
                height:100px;

                overflow:hidden;
            }

                #menuContainer a span {
                    position:absolute;
                    width:100%;
                    height:100%;
                    left:0; right:0;

                    display:flex;
                    justify-content:center;
                    align-items:center;

                    transition:0.5s;
                }

                    #menuContainer a span:nth-child(1) {
                        top: 0;
                    }
                    #menuContainer a:hover span:nth-child(1) {
                        top: -100%;
                    }
                        #menuContainer a span:nth-child(1):before {
                            font-size: 320%;
                        }

                #menuContainer a span:nth-child(2) {
                    top: 100%;
                    background: #ff5252;
                    color: #fff;
                }
                #menuContainer a:hover span:nth-child(2) {
                    top:0;
                }
    </style>
}