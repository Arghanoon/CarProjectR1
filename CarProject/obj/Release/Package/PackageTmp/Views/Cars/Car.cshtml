@section style
{
<style>
#carShowContianer {
    display:flex;
    justify-content:space-between;
    align-items:stretch;
    flex-direction:row-reverse;
}

    #content {
        flex:1;
        margin:5px;
        padding:5px;
        background:#F9F9F9;
    }

    #navigation {
        margin:5px;
        padding:5px;

        width:300px;
    }

     td section {
            display:block;
            padding:5px;
            margin:5px;

            background:#eee;
        }

        .infoHeader {
            cursor: pointer;
        }
            .infoHeader:before {
                font-family:giadmin;
	            display:inline-block;
	            margin:0 3px;
	            direction:ltr;
                font-size:70%;
                content:'\0047';
            }
            .infoHeader.active:before {
                content:'\0048';
            }

        .infoHeader + .infoTable,
        .infoHeader + .grid1 {
            display: none;
        }

