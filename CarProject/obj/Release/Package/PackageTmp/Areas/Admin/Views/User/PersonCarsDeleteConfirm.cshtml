@{
    ViewBag.Title = "حذف خودرو کاربر";
}
@model CarProject.DBSEF.PersonCar

<div class="page">
    <h3>آیا از حذف خودرو با مشخصات زیر اطمینان دارید؟</h3>
    <table class="infoTable">
        <tr>
            <th>برند</th>
            <td>@Model.Car.CarModel.CarBrand.CarBrandName</td>
        </tr>
        <tr>
            <th>مدل</th>
            <td>@Model.Car.CarModel.CarModelName</td>
        </tr>
        <tr>
            <th>پلاک</th>
            <td>@Model.CarPlate | @Model.CarPlateCityCode</td>
        </tr>
        <tr>
            <th>رنگ</th>
            <td>@Model.CarColor</td>
        </tr>
    </table>

    <form method="post">
        @Html.HiddenFor(m => m.PersonCarsId)

        <div class="inputAction">
            <input type="submit" value="حذف خودرو" class="button red" />
            <a href="/Users/Dashboard/PersonCars" class="button blue">انصراف</a>
        </div>
    </form>
</div>