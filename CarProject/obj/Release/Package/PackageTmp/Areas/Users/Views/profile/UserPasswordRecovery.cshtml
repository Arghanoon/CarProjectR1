@using CarProject.Areas.Users.Models.Dashboard
@using CaptchaMvc.HtmlHelpers


@*form specific fields*@
@{
    ViewBag.Title = "بازیابی کلمه عبور کاربر";
}

@if (ViewData.ModelState.IsValidField("success"))
{
    <div class="page">
        <h3>برای بازیابی کلمه عبور خود ایمیل خود را درقسمت زیر وارد نموده و درخواست لینک فعال سازی نمایید</h3>
        <form method="post">
            <div class="inputsContainer">
                <section class="input">
                    <label>ایمیل</label>
                    <input type="text" placeholder="user@example.com" dir="ltr" name="email" value="@Request.Form["email"]" />
                    <span>@Html.ValidationMessage("email")</span>
                </section>
            </div>

            <section class="input" style="display:flex; justify-content:center; align-items:center;">
                <label>تصویر امنیتی</label>
                <div style="display:flex; flex-direction:column; justify-content:center; align-items:center;">
                    <a href="javascript:void()" onclick="ReloadCaptcha('captcha')"><img id="captcha" src="/default/index" /></a>
                    <small>برای تغییر کد روی تصویر کلیک کنید</small>
                    <input type="text" placeholder="کد بالا را اینجا وارد کنید" name="captcha" />
                </div>
                <span>@Html.ValidationMessage("captcha")</span>
            </section>

            <div class="inputAction">
                <input type="submit" class="button green" value="ارسال لینک فعال سازی" />
            </div>
        </form>
    </div>
}
else
{
    <div class="messageInLine green">
        <h3>ایمیل فعال سازی با موفقیت ارسال شد</h3>
        <small>برای بازیابی کلمه عبور خود به ایمیل خود مراجعه کنید</small>
    </div>
}


<script>
    $('#refresh').click(function () {

        var d = new Date();
        $("#imgcpatcha").attr("src", "Captcha/CaptchaImage?" + d.getTime());

    });
</script>