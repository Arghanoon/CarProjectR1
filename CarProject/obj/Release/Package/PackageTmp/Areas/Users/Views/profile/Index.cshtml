</div>



@section head
{
    <style>
        .menu1Container {
            display:flex; 
            justify-content:center;
            align-items:center;
            flex-wrap:wrap;
        }

            .menu1Container a {
                margin:5px;
                width:150px;
                height:150px;
                border:thin solid #888;
                overflow:hidden;

            }
                .menu1Container a > * {
                    position:absolute;
                    width:100%; height:100%;
                    left:0; right:0;

                    display:flex; justify-content:center; align-items:center;

                    transition:0.5s;
                }
                .menu1Container a .logo {
                    top:0;
                }
                    .menu1Container a .logo:before {
                        font-size: 100px;
                        top: 0;

                        color:transparent;
                        text-shadow:1px 1px 3px #fff, 0 0 0 #000;
                    }
                .menu1Container a .title {
                    top:100%;
                    background:#eaeaea;
                }


                .menu1Container a:hover .logo {
                    top: -100%;
                }
                .menu1Container a:hover .title {
                    top:0;
                }
    </style>
}