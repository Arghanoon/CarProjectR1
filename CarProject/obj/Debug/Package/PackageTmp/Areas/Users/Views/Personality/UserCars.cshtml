@{
    ViewBag.Title = "خودروی کاربران";
    var dbs = new CarProject.DBSEF.CarAutomationEntities();
}

<div>

    <div class="itemContainer">
        @foreach (var item in dbs.PersonCars)
        {
            <div class="item">
                <section class="title gia-car2"> | @item.Car.CarModel.CarBrand.CarBrandName</section>
                <section class="table">
                    <table>
                        <tr>
                            <th>خودرو</th>
                            <td>@item.Car.CarModel.CarBrand.CarBrandName @item.Car.CarModel.CarModelName</td>
                        </tr>
                        <tr>
                            <th>سال ساخت</th>
                            <td>@item.CarCreationDate</td>
                        </tr>
                        <tr>
                            <th>رنگ</th>
                            <td>@item.CarColor</td>
                        </tr>
                        <tr>
                            <th>پلاک</th>
                            <td>@item.CarPlate - @item.CarPlateCityCode</td>
                        </tr>
                    </table>
                </section>
                <section class="action">
                    <a href="@Url.Action("UserCars_Update", "Personality", new { id = item.PersonCarsId })" class="gia-edit"></a>
                </section>
            </div>
        }
    </div>

</div>