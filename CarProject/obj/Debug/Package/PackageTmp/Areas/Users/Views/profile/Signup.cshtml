@{
    ViewBag.Title = "ثبت نام کاربر";
}
@using CarProject.App_Code
@model CarProject.Models.User.UserInfo


    <div  id="signupsection">
        <form method="post" class="page">
           
            <h3>ثبت نام کاربر جدید</h3>
            <small>
                در صورتی که عضو سایت خودرو کلینیک نیستید هم اکنون عضو سایت شوید تا از خدمات آن بهره من شوید
            </small>
            <hr />
            <div class="inputsContainer">
                @Html.input_TextBox(m => m.Person.PersonFirtstName, "نام")
                @Html.input_TextBox(m => m.Person.PersonLastName, "نام خانوادگی")
                @Html.input_TextBox(m => m.Person.PersonEmail, "ایمیل")
                @Html.input_TextBox(m=> m.Person.PersonPhone, "تلفن ثابت")
                @Html.input_TextBox(m => m.Person.PersonMobile, "همراه")
                @Html.input_TextBox(m => m.Person.PersonAddressCity, "شهر محل اقامت")
                @Html.input_TextArea(m => m.Person.PersonAddress, "آدرس کامل")
                <hr />
                @Html.input_TextBox(m => m.Person.User.Uname, "نام کاربری")
                @Html.input_Password(m => m.Password, "کلمه عبور")
                @Html.input_Password(m => m.PasswordConfirm, "تایید کلمه عبور")
            </div>
            <div class="inputAction">
                <input type="submit" value="ثبت نام کاربر"  class="button green"/>
            </div>
        </form>
    
    </div>



