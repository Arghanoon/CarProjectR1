@{
    ViewBag.Title = "تغییر کلمه عبور کاربر";
    var user = CarProject.Areas.Users.Controllers.profileController.GetCurrentLoginedUser;
}


@if(ViewData.ModelState.IsValidField("success"))
{
<div class="item">
    <h3>تغییر کلمه عبور کاربر - @user.Uname</h3>
    <form method="post">
        <div class="inputsContainer">
            <section class="input">
                <label>کلمه عبور فعلی</label>
                <input type="password" name="currentPassword" />
                <span>@Html.ValidationMessage("currentPassword")</span>
            </section>

             <section class="input">
                <label>کلمه عبور جدید</label>
                <input type="password" name="newPassword1" />
                <span>@Html.ValidationMessage("newPassword1")</span>
            </section>

             <section class="input">
                <label>تایید کلمه عبور جدید</label>
                <input type="password" name="newPassword2" />
                <span>@Html.ValidationMessage("newPassword2")</span>
            </section>
        </div>

        <div class="inputAction">
            <input type="submit" value="تغییر کلمه عبور" class="button green" />
        </div>
    </form>
</div>
}
else
{
    <div class="page" style="text-align:center; color:lawngreen;">
        <h3>کلمه عبور شما با موفقیت تغییر یافت</h3>
    </div>
}