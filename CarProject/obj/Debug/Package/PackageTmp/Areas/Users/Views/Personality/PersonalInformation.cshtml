@model CarProject.Models.User.UserInfo
@{
    ViewBag.Title = "مشخصات کاربر";
}


<form method="post">
    @Html.HiddenFor(m => m.IsForUpdate)
    @Html.HiddenFor(m => m.Person.UserId)
    @*<div id="errorsection" style="color:red;">
        @Html.ValidationSummary(false)
    </div>*@
    <div class="inputsContainer">
        
        @Html.input_TextBox(m => m.Person.PersonFirtstName, "نام")
