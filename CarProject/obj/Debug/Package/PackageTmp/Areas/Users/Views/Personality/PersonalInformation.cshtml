        @Html.input_TextBox(m => m.Person.PersonPhone, "شماره تلفن ثابت")
        @Html.input_TextBox(m => m.Person.PersonMobile, "شماره موبایل")
        @Html.input_TextBox(m => m.Person.PersonEmail, "پست الکترونیک")
        @Html.input_TextBox(m => m.Person.PersonAddressCity, "شهر محل اقامت")
