@{
    ViewBag.Title = "نمایش پیغام";

    int id = 0;
    int.TryParse(ViewContext.RouteData.Values["id"].ToString(), out id);
    if(id <= 0)
    { Response.Redirect("/Admin/Cars/CarComments"); }

    var dbs = new CarProject.DBSEF.CarAutomationEntities();
    var comment = dbs.CarComments.FirstOrDefault(c => c.CarCommentsId == id);
    if(comment == null)
    { Response.Redirect("/Admin/Cars/CarComments"); }
        
}
@using CarProject.App_extension


<a href="/Admin/Cars/CarComments" class="gia-back">برگشت به صفحه پیامها</a>


<div id="CommentShowContainer">
    <div class="header">
        <section>
            <strong>@comment.Car.CarModel.CarBrand.CarBrandName</strong> | <small>@comment.Car.CarModel.CarModelName</small>
        </section>

        <section>@comment.datetime.DateTime_Persian()</section>
    </div>


    <div class="body">
        <table class="infoTable">
            <tr>
                <th>نام و نام خانوادگی</th>
                <td>@comment.Fullname</td>
            </tr>
            <tr>
                <th>ایمیل</th>
                <td>@comment.Email</td>
            </tr>
            <tr>
                <th>متن پیام</th>
                <td>@comment.Comment</td>
            </tr>
        </table>
    </div>

    <div class="footer">
        <a href="@Url.Action("CarCommentShow_delete", new { id = comment.CarCommentsId })" class="gia-remove button red">حذف پیام</a>
        @{ string activeClassView = (comment.canshow == true) ? "gia-inactive button yellow" : "gia-active button green"; }
        <a href="javascript:void();" onclick="Request_ChangeCanShowState('@comment.CarCommentsId',this)" class="@activeClassView button blue">تغییر وضعیت نمایش / عدم نمایش پیام</a>
    </div>
</div>



@section style
{
    <style>
        #CommentShowContainer {
            border:thin solid #000;
            border-radius:5px;
            overflow:hidden;
        }
            #CommentShowContainer .header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                background: black;
                color: white;
                padding: 5px;
            }

            #CommentShowContainer .body {
                padding:5px;
            }

            #CommentShowContainer .footer {
                display:flex; 
                flex-direction:row-reverse;
            }
    </style>
}


@section script
{
    <script>
        function Request_ChangeCanShowState(id, el) {
            $.post('@Url.Action("CarChangeCanShowState", "Cars")', { "ID": id }, function (res) {
                if (res == 1) {
                    el.className = "gia-inactive button yellow";
                }
                else {
                    el.className = "gia-active button green";
                }
            });
        }
    </script>
}
