@{
    ViewBag.Title = "مدیریت کدهای تخفیف محصولات";

    var dbs = new CarProject.DBSEF.CarAutomationEntities();
    var discount = dbs.Discounts.AsQueryable();
}


<div>
    <h3>مدیریت کدهای تخفیف محصولات</h3>
    <hr />
    <div class="itemContainer ">
        @foreach (var item in discount)
        {
            <div class="item">
                <section class="title">@item.DiscountId - @item.DiscountCode</section>
                <table>
                    <tr>
                        <th>کد تخفیف</th>
                        <td>@item.DiscountCode</td>
                    </tr>
                    <tr>
                        <th>درصد تخفیف</th>
                        <td>@item.Discount1</td>
                    </tr>
                </table>
                <section class="action">
                    <a href="/Admin/Store/ProductDiscount_DeleteConfirm/@item.DiscountId" class="gia-remove"></a>
                    <a href="/Admin/Store/ProductDiscount_update/@item.DiscountId" class="gia-edit"></a>
                </section>
            </div>
        }
    </div>
</div>