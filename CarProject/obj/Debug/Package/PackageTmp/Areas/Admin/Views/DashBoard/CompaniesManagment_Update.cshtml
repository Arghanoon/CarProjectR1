@using CarProject.App_Code
@{
    ViewBag.Title = "ویرایش اطلاعات شرکت";
}
@model CarProject.Areas.Admin.Models.Dashboard.CompanyModel

<div id="CompaniInsertSection">
    <form method="post">
        
        <div class="inputsContainer">
            @Html.HiddenFor(m => m.Company.CompanyId)
            @Html.input_TextBox(m => m.Company.CompanyName, "نام شرکت")
            @Html.input_TextArea(m => m.Company.CompanyAddress, "آدرس شرکت")

        </div>

        <div class="inputAction">
            <input type="submit" value="ویرایش شرکت"  class="button green"/>
        </div>

    </form>
</div>