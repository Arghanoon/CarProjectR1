@{
    ViewBag.Title = "PaymentCart";
}
@model CarProject.DBSEF.Basket


<div class="page" id="printableArea">
    <h3>نتیجه خرید</h3>
    <hr />
    <strong>خرید شما با موفقیت ثبت شد اطلاعات زیر را حفظ نمایید</strong>
    <table id="showinfo">
        <tr>
            <th>کد پیگیری بانک</th>
            <td>@Model.BackCodeFromBank</td>
        </tr>
        <tr>
            <th>کد پیگیری خودروکلینیک</th>
            <td>@Model.BasketCode</td>
        </tr>
    </table>

    <input type="button" onclick="window.print()" value="چاپ صفحه" />
</div>


@section style
{
    <style>
        #showinfo {
            width:100%;
        }
            #showinfo th,
            #showinfo td {
                padding:1px 5px;
                border:thin solid #eaeaea;
            }

            #showinfo th {
                text-align:right;
                background:#eaeaea;
            }

       

    </style>
}